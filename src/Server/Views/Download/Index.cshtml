@model File

<a asp-controller="file" asp-action="get">Download: @Model.Name</a> <br />
<p>
    Uploaded by: @Model.Owner.Username
</p>

<br />

@if (Model.ShowAsRawText)
{
    @System.Text.Encoding.UTF8.GetString(Model.Content)
}
else if (Model.ShowAsImage)
{
    @*Show a image with base 64 encoding*@
    <img alt="@Model.Name" src="data:image/@Model.FileExtention ;base64,@Convert.ToBase64String(Model.Content)" />
}